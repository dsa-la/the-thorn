{% extends "layouts/base.njk" %}
{% set pageClass = 'home' %}
{% block title %}
    <title>The Thorn â€“ Newsletter</title>
{% endblock %}
{% block meta %}
	<meta name="Description" content="The Thorn, issue {{ post.issue_number }}. {{ post.title }}">
	<meta property="og:description" content="The Thorn, issue {{ post.issue_number }}, {{ post.title }}">
	<meta name="twitter:description" content="The Thorn, issue {{ post.issue_number }}, {{ post.title }}">
{% endblock %}

{% block content %}
	<div class="container thin posts-container">
	    <section class="post">
	    	<header class="post-header">
	    		<h1 class="post-title">{{ post.title }}</h1>
  				<div class="post-date-header">
  					<span class="post-number">No {{ post.issue_number }}</span>
  					<span class="post-date" data-send-time="{{ post.date }}">{{ post.send_time }}</span>
  				</div>
	    	</header>
	    	<article class="post-body">
	    		<div class="post-html">
	    			{{ post.html | safe }}
	    		</div>
	    	</article>
	    </section>
	</div>
{% endblock %}
