{% extends "layouts/base.njk" %}
{% set pageName = 'Our Story' %}
{% set pageClass = 'home' %}
{% block title %}
    <title>The Thorn</title>
{% endblock %}

{% block content %}
	<div class="container thin posts-container">
    {% for post in posts %}
	    <section class="post" id="post-{{ post.id }}">
	    	<header class="post-header">
	    		<h1 class="post-title">{{ post.settings.subject_line }}</h1>
				<div class="post-date-header">
					<span class="post-number">No {{ post.issue_number }}</span>
					<span class="post-date" data-send-time="{{ post.send_time }}">{{ post.send_time }}</span>
				</div>
	    	</header>
	    	<article class="post-body">
				<div class="post-html">{{ post.html | safe }}</div>
				<div class="post-url">
					<a href="{{post.slug}}" class="post-link link-cta">Read more</a>
				</div>
	    	</article>
	    </section>
    {% endfor %}
	</div>
{% endblock %}
